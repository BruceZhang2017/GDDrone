<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_video_state"
    tools:context="com.jieli.stream.dv.gdxxx.ui.activity.MainActivity">

    <com.jieli.stream.dv.gdxxx.ui.widget.media.IjkVideoView
        android:id="@+id/mStreamView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/viewBackground"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/mOther"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/mSnapshootFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_white"
            android:visibility="gone"
            ></RelativeLayout>
        <TableLayout
            android:id="@+id/mMoreHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent_dark"
            android:padding="8dp"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBarLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:src="@mipmap/ic_player" />


        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_top_left_bg"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@mipmap/red"/>

            <LinearLayout
                android:id="@+id/topControlBar"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/weixing"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:id="@+id/txtPlanet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_color"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textSize="25sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/d0"/>
                    <TextView
                        android:id="@+id/txtDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_color"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="25sp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:src="@mipmap/m0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/h0"/>
                    <TextView
                        android:id="@+id/txtHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_color"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="25sp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:src="@mipmap/m0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/hs0"/>
                    <TextView
                        android:id="@+id/txtSpeedH"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_color"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="25sp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:src="@mipmap/km0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/vs0"/>
                    <TextView
                        android:id="@+id/txtSpeedV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_color"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="25sp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:src="@mipmap/ms0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">
                        <ImageButton
                            android:id="@+id/btnWifi"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/main_wifi_4" />
                        <ImageView
                            android:id="@+id/imgLock"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp" />
                        <ImageView
                            android:id="@+id/imgBattery"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/main_battery_3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/leftPanel"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="30dp">
                <ImageView
                    android:id="@+id/imgOilPanel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_oilpanel" />

                <ImageView
                    android:id="@+id/btnOilPoint"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_point" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rightPanel"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="30dp">
                <ImageView
                    android:id="@+id/imgGSensorPanel"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_gsensorpanel" />
                <ImageView
                    android:id="@+id/btnGSensorPoint"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/main_point" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/leftControlBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/topControlBar"
                tools:ignore="DisableBaselineAlignment">

                <ImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/main_hide_views" />

                <ImageButton
                    android:id="@+id/btnGSensor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="92dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/main_gsensor" />

                <ImageButton
                    android:id="@+id/btnHidePanel"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="154dp"
                    android:contentDescription="@null"
                    android:background="@mipmap/main_joystick_switch_sel"/>

                <ImageButton
                    android:id="@+id/btnPhotos"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@null"
                    android:background="@mipmap/main_photos"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rightControlBar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/topControlBar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-2dp">

                <ImageButton
                    android:id="@+id/btnRecorder"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/main_recorder" />

                <ImageView
                    android:id="@+id/txtRecorderRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/txtRecorderTime"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_red_dot"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtRecorderTime"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="00:00"
                    android:textColor="@color/text_red"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="92dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/main_snapshot"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnSensorSetting"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="154dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/main_sensor_setting_sel" />

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@mipmap/main_settings"
                    android:contentDescription="@null" />


                <ImageView
                    android:id="@+id/left_bar_adjust_resolution_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/drawable_resolution_hd" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomControlBar"
                android:layout_width="200dp"
                android:layout_height="68dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">
                <Switch
                    android:id="@+id/switchLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:switchMinWidth="20dp"
                    android:layout_marginLeft="0dp"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    android:textOn=""
                    android:textOff=""
                    android:visibility="gone"/>
                <ImageButton
                    android:id="@+id/btnSpeed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:enabled="false"
                    android:background="@mipmap/location_bottom"/>
                <RelativeLayout
                    android:id="@+id/rl_comprass"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/iv_comprass"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"/>
                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/red_arrow"/>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/btnLandingOrTakeoff"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toLeftOf="@id/btnSpeed"
                    android:layout_marginRight="35dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:background="@mipmap/main_takeoff_landing"/>
                <ImageButton
                    android:id="@+id/btnFlyBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toRightOf="@id/btnSpeed"
                    android:layout_marginLeft="35dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:background="@mipmap/main_voyage_home"/>
            </RelativeLayout>

            <!--android:visibility="gone"-->
            <RelativeLayout
                android:id="@+id/centerSensorPanel"
                android:layout_width="310dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_corner10"
                android:alpha="1.0"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_corner_setting_title"
                    android:alpha="1.0"
                    ></RelativeLayout>
                <TextView
                    android:id="@+id/txtSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_white"
                    android:text="@string/sensor_panel_settting" />


                <TextView
                    android:id="@+id/txtBrightness"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/sensor_panel_brightness" />
                <TextView
                    android:id="@+id/txtBrightnessValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="41dp"
                    android:layout_toRightOf="@id/txtBrightness"
                    android:textSize="13sp"
                    android:text="0" />
                <SeekBar
                    android:id="@+id/seekBarBrightness"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@id/txtBrightness"
                    android:layout_toRightOf="@id/txtBrightnessValue"
                    android:layout_marginTop="-5dp"
                    android:maxHeight="3dip"
                    android:progress="128"
                    android:max="255"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/setting_panel_title"
                    android:layout_alignBottom="@id/seekBarBrightness"
                    ></RelativeLayout>

                <TextView
                    android:id="@+id/txtExposure"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="71dp"
                    android:text="@string/sensor_panel_exposure" />
                <TextView
                    android:id="@+id/txtExposureValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="72dp"
                    android:layout_toRightOf="@id/txtExposure"
                    android:textSize="13sp"
                    android:text="0" />
                <SeekBar
                    android:id="@+id/seekBarExposure"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txtExposure"
                    android:layout_toRightOf="@id/txtExposureValue"
                    android:maxHeight="3dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:progress="3"
                    android:max="6"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/setting_panel_title"
                    android:layout_alignBottom="@id/seekBarExposure"
                    ></RelativeLayout>

                <TextView
                    android:id="@+id/txtContrast"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="102dp"
                    android:text="@string/sensor_panel_contrast" />
                <TextView
                    android:id="@+id/txtContrastValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="103dp"
                    android:layout_toRightOf="@id/txtContrast"
                    android:textSize="13sp"
                    android:text="255" />
                <SeekBar
                    android:id="@+id/seekBarContrast"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txtContrast"
                    android:layout_toRightOf="@id/txtContrastValue"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:maxHeight="3dip"
                    android:progress="255"
                    android:max="511"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/setting_panel_title"
                    android:layout_alignBottom="@id/seekBarContrast"
                    ></RelativeLayout>

                <TextView
                    android:id="@+id/txtWhiteBalance"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="133dp"
                    android:textSize="12dp"
                    android:text="@string/sensor_panel_white_balance" />
                <TextView
                    android:id="@+id/txtWhiteBalanceValue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="134dp"
                    android:layout_toRightOf="@id/txtWhiteBalance"
                    android:textSize="13sp"
                    android:text="0" />
                <SeekBar
                    android:id="@+id/seekBarWhiteBalance"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txtWhiteBalance"
                    android:layout_toRightOf="@id/txtWhiteBalanceValue"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:maxHeight="3dip"
                    android:progress="0"
                    android:max="4"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:textSize="15dp"
            android:textColor="@color/bg_red" />
    </RelativeLayout>

</RelativeLayout>
