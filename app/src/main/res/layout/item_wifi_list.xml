<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_wifi_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_device_unselected"
        android:contentDescription="@string/company"/>
    <TextView
        android:id="@+id/item_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_toRightOf="@+id/item_wifi_icon"
        android:layout_toLeftOf="@+id/item_wifi_state"
        android:textSize="@dimen/text_small"/>
    <TextView
        android:id="@+id/item_wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/item_wifi_select_state"
        android:textSize="@dimen/text_small"/>
    <ImageView
        android:id="@+id/item_wifi_select_state"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_uncheck_round_blue"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/company"/>

</RelativeLayout>