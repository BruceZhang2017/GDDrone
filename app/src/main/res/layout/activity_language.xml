<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_dev_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/bg_video_state">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/background_transparent"
            android:drawableStart="@drawable/ic_return_press"
            android:onClick="returnBtnClick"
            android:padding="4dp"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/device_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="@string/language"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_normal_inc"
            tools:ignore="RelativeOverlap" />


        <Button
            android:id="@+id/lan_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@color/background_transparent"
            android:padding="4dp"
            android:text="@string/comfirm"
            android:onClick="confirmBtnClick"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <RadioGroup
        android:layout_marginTop="@dimen/setting_marginTop"
        android:id="@+id/language_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_transparent"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/zh_r_rbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/bg_white"
            android:button="@null"
            android:drawableEnd="@drawable/bg_picture_qulity"
            android:padding="10dp"
            android:text="@string/language_zh_r"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />

        <RadioButton
            android:id="@+id/english_us_rbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@drawable/bg_picture_qulity"
            android:padding="10dp"
            android:layout_marginTop="1dp"
            android:background="@color/bg_white"
            android:text="@string/language_english_us"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_small" />
    </RadioGroup>
</LinearLayout>