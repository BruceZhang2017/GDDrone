<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jieli.stream.dv.gdxxx.ui.fragment.HelpFragment">

    <RelativeLayout
        android:id="@+id/dev_photo_normal_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/bg_video_state">

        <ImageView
            android:id="@+id/about_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_return_press"
            android:padding="5dp" />

        <TextView
            android:id="@+id/dev_photo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/about_return"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/help"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_normal" />
    </RelativeLayout>


    <!--android:background="@drawable/text_style"-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbarStyle="outsideInset"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/imgHelp"
                android:adjustViewBounds="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/help" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
